<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_peserta_popup">


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="@dimen/h1"
                android:text="Daftar Sebagai Peserta" />

        </RelativeLayout>

        <LinearLayout

            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Spinner

                android:id="@+id/spin_nama"
                android:layout_width="@dimen/spinner_size"
                android:layout_height="wrap_content">

            </Spinner>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/et_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/et_nama"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/body_text_size"
                android:ems="10"
                android:inputType="textPersonName"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:hint="Nama "/>

            <EditText
                android:id="@+id/et_telepon"
                android:layout_below="@id/et_nama"
                android:layout_marginTop="18dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/body_text_size"
                android:ems="10"
                android:inputType="number"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:hint="@string/nomor_telepon"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_below="@id/et_telepon"
                android:layout_marginTop="18dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="@dimen/body_text_size"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:hint="Alamat e-mail "/>

            <EditText
                android:id="@+id/et_keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:layout_below="@id/et_email"
                android:layout_marginTop="18dp"
                android:textSize="@dimen/body_text_size"
                android:layout_centerHorizontal="true"
                android:hint="Keterangan"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_daftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Daftar" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Cancel" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>