<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:id="@+id/add_peserta_popup">


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:paddingBottom="40dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="Daftar Sebagai Peserta" />
        </RelativeLayout>

        <LinearLayout

            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spin_nama"
                android:layout_width="250dp"
                android:layout_height="35dp">



            </Spinner>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/et_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp">

            <EditText
                android:id="@+id/et_nama"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:ems="10"
                android:inputType="textPersonName"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:hint="Nama "/>

            <EditText
                android:id="@+id/et_telepon"
                android:layout_below="@id/et_nama"
                android:layout_marginTop="18dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:ems="10"
                android:inputType="number"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:hint="Nomor telepon "/>

            <EditText
                android:id="@+id/et_email"
                android:layout_below="@id/et_telepon"
                android:layout_marginTop="18dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:hint="Alamat e-mail "/>

            <EditText
                android:id="@+id/et_keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:layout_below="@id/et_email"
                android:layout_marginTop="18dp"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:hint="Keterangan"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_daftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Daftar" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Cancel" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>